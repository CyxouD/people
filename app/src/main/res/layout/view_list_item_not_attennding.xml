<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/my_rect_large">

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:elevation="2dp"
        android:id="@+id/itemImageView"/>
    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_toRightOf="@+id/itemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:elevation="2dp"
        android:id="@+id/itemTextView"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/button_add"
        android:layout_toRightOf="@+id/itemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:drawableRight="@mipmap/ic_add_btn"
        android:background="@drawable/my_rect_small"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="15dp" />
</RelativeLayout>